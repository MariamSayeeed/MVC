
@{
    ViewData["Title"] = "CheckYourEmail";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Check</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(135 deg, #8e44ad, #ff69b4);
            color: white;
            font-family: Arial, sans-serif;
        }



        .container {
            text-align: center;
            border: 5px solid #ff69b4;
            padding: 50px;
            border-radius: 15px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            position: relative;
        }

        h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 4em;
            text-shadow: 2px 2px 8px rgba(255, 255, 255, 0.8);
            opacity: 0;
            transition: opacity 0.5s, transform 0.5s;
            color: #ffffff;
        }

        .show {
            opacity: 1;
            transform: scale(1.1);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 id="animatedText">Check Your Email</h1>
    </div>

    <script>
        window.onload = function () {
            const textElement = document.getElementById('animatedText');
            textElement.classList.add('show');

            let isPurple = true;
            const colorChangeInterval = setInterval(() => {
                textElement.style.color = isPurple ? '#ff69b4' : '#d4a5ff';
                isPurple = !isPurple;
            }, 500);

            setTimeout(() => clearInterval(colorChangeInterval), 10000);
        };
    </script>
</body>
</html>