@model IEnumerable<RoleToReturnDto>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>


<a asp-action="Create" asp-controller="Role" class="btn btn-primary">Create Role</a>
<br />
<br />

<form class="m-2">
    <div class="container m-4 ">
        <div class="row">

            <div class="col-6">
                <input name="SearchInput" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>

    </div>
</form>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class=" table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                   
                    <td>@item.Id</td>
                    <td>@item.Name</td>

                    <partial name="_ButtonPartialView" model="@item.Id" />


                </tr>
            }

        </tbody>


    </table>
}
else
{
    <div> There are No Roles </div>
}


