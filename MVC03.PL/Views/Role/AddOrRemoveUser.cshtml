@model List<UsersInRoleDto>

@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewData["RoleId"] as string;


}
    

<form asp-action="AddOrRemoveUser" asp-route-roleId="@RoleId">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected" />
            <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
        </div>

        <input hidden asp-for="@Model[i].UserId" />
        <input hidden asp-for="@Model[i].UserName" />



    }

    <input type="submit" class="btn btn-success" value="Update" />
    <a asp-action="Edit" class="btn btn-light" asp-route-id="@RoleId">Cancel </a>


</form>






